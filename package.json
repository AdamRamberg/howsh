{
  "name": "howsh",
  "version": "0.1.0",
  "description": "Turn English into bash commands with AI-powered suggestions",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "howsh": "./dist/index.js"
  },
  "files": [
    "dist",
    "cheatsheets",
    "src/shell"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "bash",
    "cli",
    "ai",
    "shell",
    "terminal",
    "learning"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdamRamberg/howsh"
  },
  "dependencies": {
    "ai": "^4.0.0",
    "@ai-sdk/anthropic": "^1.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "commander": "^12.0.0",
    "zod": "^3.23.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "conf": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18"
  }
}
